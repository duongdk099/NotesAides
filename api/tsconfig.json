{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "types": [
            "bun-types"
        ]
    },
    "include": [
        "src/**/*",
        "drizzle.config.ts"
    ]
}